<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndicatorView">
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorColorSelected" format="color"/>
        <attr name="indicatorWidth" format="integer"/>
        <attr name="gravity" format="integer"/>
    </declare-styleable>
    <attr name="app_primary_color" format="color"/> <!-- topbar -->
    <attr name="app_content_bg_color" format="color"/> <!-- content-->
    <!--for count editText-->
    <declare-styleable name="CountEditText">
        <attr name="ce_maxLength" format="integer"/>
        <attr name="ce_hint" format="string"/>
        <attr name="ce_edit_text_size" format="dimension"/>
        <attr name="ce_edit_text_color" format="color"/>
        <attr name="ce_count_text_size" format="dimension"/>
        <attr name="ce_countMode" format="enum">
            <enum name="Remaining" value="1"></enum>
            <enum name="Percentage" value="2"></enum>
        </attr>
    </declare-styleable>
</resources>